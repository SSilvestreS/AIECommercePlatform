{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Gateway": {
    "BaseUrl": "http://localhost:5000"
  },
  "MLService": {
    "BaseUrl": "http://localhost:5002"
  },
  "Performance": {
    "TestDuration": "00:05:00",
    "WarmUpDuration": "00:00:30",
    "MaxConcurrentUsers": 1000,
    "RampUpTime": "00:02:00",
    "TargetRPS": 1000
  },
  "Resilience": {
    "RetryCount": 3,
    "RetryDelay": "00:00:01",
    "CircuitBreakerThreshold": 5,
    "Timeout": "00:00:30"
  },
  "Monitoring": {
    "EnableMetrics": true,
    "MetricsEndpoint": "http://localhost:9090",
    "LogResults": true,
    "ResultsPath": "./results/"
  }
}
